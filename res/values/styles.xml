<resources>

    <style name="AppTheme" parent="Theme.Bruins" >
        <!--<item name="background">@color/translucent_white</item>-->
        <!--<item name="android:background">@color/translucent_white</item>-->
    </style>


    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="FillWidth" parent="Wrap">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="NavigationDrawerDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="NavigationDrawerDividerWhite">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="NavDrawerItem" parent="FillWidth">
        <item name="android:onClick">navigationDrawerItemClick</item>
    </style>

    <style name="ShadowText">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">5.0</item>
    </style>




    <style name="Theme.Bruins" parent="Theme.Sherlock">
        <item name="actionBarItemBackground">@drawable/selectable_background_bruins</item>
        <item name="popupMenuStyle">@style/PopupMenu.Bruins</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Bruins</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Bruins</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Bruins</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Bruins</item>
        <item name="actionModeBackground">@drawable/cab_background_top_bruins</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_bruins</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Bruins</item>
    </style>

    <style name="ActionBar.Solid.Bruins" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_bruins</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_bruins</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_bruins</item>
        <item name="progressBarStyle">@style/ProgressBar.Bruins</item>
    </style>

    <style name="ActionBar.Transparent.Bruins" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_bruins</item>
        <item name="progressBarStyle">@style/ProgressBar.Bruins</item>
    </style>

    <style name="PopupMenu.Bruins" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bruins</item>
    </style>

    <style name="DropDownListView.Bruins" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_bruins</item>
    </style>

    <style name="ActionBarTabStyle.Bruins" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_bruins</item>
    </style>

    <style name="DropDownNav.Bruins" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_bruins</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bruins</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_bruins</item>
    </style>

    <style name="ProgressBar.Bruins" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_bruins</item>
    </style>

    <style name="ActionButton.CloseMode.Bruins" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_bruins</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Bruins.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Bruins</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Bruins</item>
    </style>



</resources>